{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}

{% macro inputCheckboxes(form, legend, checkboxes, errorMessage) %}

  {{ govukCheckboxes({
    name: "value",
    fieldset: {
      legend: {
        text: messages(legend),
        isPageHeading: true,
        classes: "govuk-fieldset__legend--xl"
      }
    },
    items: checkboxes,
    errorMessage: errorMessage
  }) }}
{% endmacro %}