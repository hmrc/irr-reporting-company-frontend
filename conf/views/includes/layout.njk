{% extends "govuk/template.njk" %}
{%- set assetPath = "/assets/lib/govuk-frontend/govuk/assets" -%}

{% from "components/phaseBanner/macro.njk" import phaseBanner %}
{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}

{% block head %}
  {% include "includes/head.njk" %}
{% endblock %}

{% block header %}
  {% include "components/siteHeader.njk" %}
{% endblock %}

{% block beforeContent %}

  {{ phaseBanner("alpha") }}

  {{ govukBackLink({
    href: "#",
    text: "Back",
    attributes: {
        id: "back-link"
    }
  }) }}

{% endblock %}

{% block bodyEnd %}
  {% block scripts %}
    {% include "includes/scripts.njk" %}
  {% endblock %}
{% endblock %}