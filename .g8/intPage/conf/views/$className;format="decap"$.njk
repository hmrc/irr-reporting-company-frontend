{% extends "includes/layout.njk" %}

{% from "components/inputNumber/macro.njk" import inputNumber %}
{% from "components/pageTitle.njk" import pageTitle %}
{% from "components/form/macro.njk" import formHelper %}
{% from "components/button/macro.njk" import button %}
{% from "components/fieldset/macro.njk" import fieldset %}

{% block pageTitle %}
  {{ pageTitle(form, "$className;format="decap"$.title") }}
{% endblock %}

{% block content %}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% call formHelper(form, routes.controllers.$className$Controller.onSubmit(mode).url) %}

          {% call fieldset("$className;format="decap"$.heading") %}

            {{ inputNumber(form, "value", "value", "$className;format="decap"$.label") }}

            {{ button() }}

          {% endcall %}

        {% endcall %}

      </div>
    </div>

{% endblock %}